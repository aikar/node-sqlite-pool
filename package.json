{
  "private": true,
  "name": "sqlite-pool",
  "version": "1.2.2",
  "description": "Pooled SQLite client for Node.js with migrations and transactions, based on node-sqlite",
  "repository": "rneilson/node-sqlite-pool",
  "author": "Raymond Neilson <rneilson@interloper.ca> (https://www.interloper.ca)",
  "contributors": [
    "Kriasoft <hello@kriasoft.com> (http://www.kriasoft.com)",
    "Konstantin Tarkus <hello@tarkus.me> (https://twitter.com/koistya)"
  ],
  "keywords": [
    "sqlite",
    "db",
    "database",
    "sql",
    "migrate",
    "migration",
    "migrations",
    "migrator",
    "seed",
    "seeds",
    "seeder",
    "node",
    "node5",
    "babel",
    "es6",
    "async",
    "promise",
    "promises",
    "api",
    "pool",
    "transactions",
    "transaction"
  ],
  "license": "MIT",
  "main": "build/main.js",
  "jsnext:main": "build/main.es6.js",
  "babel": {
    "plugins": [
      "transform-es2015-modules-commonjs"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb-base",
    "rules": {
      "no-restricted-syntax": "off",
      "import/no-extraneous-dependencies": "off",
      "no-underscore-dangle": [
        "error",
        {
          "allowAfterThis": true
        }
      ],
      "brace-style": [
        "error",
        "stroustrup"
      ],
      "space-before-function-paren": [
        "error",
        "always"
      ],
      "comma-dangle": [
        "error",
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "functions": "ignore"
        }
      ],
      "no-nested-ternary": "off",
      "no-confusing-arrow": [
        "error",
        {
          "allowParens": true
        }
      ]
    }
  },
  "dependencies": {
    "generic-pool": "^3.1.6",
    "sqlite3": "^3.1.8"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-external-helpers": "^6.18.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "chai": "^3.5.0",
    "del": "^2.2.2",
    "eslint": "^3.12.2",
    "eslint-config-airbnb-base": "^10.0.1",
    "eslint-plugin-import": "^2.2.0",
    "mocha": "^3.2.0",
    "rollup": "^0.36.4",
    "rollup-plugin-babel": "^2.6.1"
  },
  "scripts": {
    "lint": "eslint src test tools",
    "test": "node tools/build && mocha",
    "build": "node tools/build",
    "postinstall": "npm run build"
  }
}
